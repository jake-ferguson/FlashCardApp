<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FlashcardApp.Controller">
   <bottom>
      <HBox alignment="CENTER" spacing="10">
          <padding>
              <Insets bottom="10" right="10" />
          </padding>
            <Button mnemonicParsing="false" onAction="#changeToCreateDeckScene" text="New Deck" />
            <Button mnemonicParsing="false" onAction="#studySelectedDeck" text="Study" />
      </HBox>
   </bottom>
   <center>
       <HBox alignment="CENTER" spacing="25">
         <TableView fx:id="deckList" prefHeight="350" prefWidth="600">
            <columns>
               <TableColumn fx:id="deckNameColumn" prefWidth="550.0" text="Deck Name" />
            </columns></TableView>
       </HBox>

   </center>
</BorderPane>
